<!DOCTYPE html>
<html>
<head>
  <title><%= @title || current_site_name %></title>
  <%= stylesheet_link_tag    "publinator/manage", :media => "all" %>
  <%= javascript_include_tag "publinator/manage" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="header">
    <h3><%= link_to "Managing", manage_path %> :: <%= link_to (current_site_name || "Publinator"), manage_path %></h3>
  </div>
  <div id="content">
    <%= alert if alert %>
    <%= notice if notice %>
    <%= yield %>
  </div>
  <div id="footer">
    <%= link_to "Public Site", "/", :target => "_new"%>
  </div>
</body>
</html>
