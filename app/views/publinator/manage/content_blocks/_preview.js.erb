var new_preview_html = '<%= escape_javascript( render( :partial => "preview.html", :locals => { :content_block => @content_block } ) ) %>';
var preview_div = $('.content_area #content_block_<%= @content_block.id %>');

if ( preview_div.length > 0 ) {
  preview_div.replaceWith( new_preview_html )
}
else {
  $('.content_area#content_area_<%=@content_block.area%> ol').append( new_preview_html );
}

$('#addContentModal').modal('hide');
$('#editContentModal').modal('hide');
